generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Product {
id  String @id @default(auto())  @map("_id") @db.ObjectId
name String
category String
image String[]
price Int
quantity Int
weight Int?
rating Int
itemLeft Int
soldCount Int
hatchDate DateTime?
dateAdded DateTime @default(now())
brand String
minimum Int?
discountTier Json
}